    function calcSum() {
        let Sub 1 = document.getElementsByName("num1")[0].value;
        let Sub 2 = document.getElementsByName("num2")[0].value;
        let Sub 3 = document.getElementsByName("num3")[0].value
        let Sub 4 = document.getElementsByName("num4")[0].value
        let sum = Number(num1) + Number(num2) + Number(num3) + Number(num4);
